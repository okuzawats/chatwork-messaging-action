yaml-files:
  - '*.yaml'
  - '*.yml'

rules:
  braces:
    level: warning
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    level: warning
    min-spaces-inside: 1
    max-spaces-inside: 1
  colons:
    level: warning
  commas:
    level: warning
  comments:
    level: warning
    min-spaces-from-content: 1
  comments-indentation: disable
  document-end: disable
  document-start: disable
  empty-lines: disable
  empty-values: disable
  hyphens: disable
  indentation:
    level: warning
    indent-sequences: consistent
  key-duplicates: enable
  key-ordering: disable
  line-length: disable
  new-line-at-end-of-file:
    level: warning
  new-lines: enable
  octal-values: disable
  quoted-strings:
    quote-type: double
  trailing-spaces: disable
  truthy: disable
